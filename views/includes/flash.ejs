<% if(success && success.length>0) {%>
    <div class="row">
        <div class="alert alert-success alert-dismissible fade show mt-2 col-4 offset-4" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<%}%>

<% if(error && error.length>0) {%>
    <div class="row">
        <div class="alert alert-danger alert-dismissible fade show mt-2 col-4 offset-4" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<%}%>