<% layout("layouts/boilerplate.ejs") %>

<div class="row mt-4 offset-4">
    <div class="col-6 ">
        <form action="/auth/login" method="POST" class="needs-validation" novalidate>
            <div class="mt-0">
                <h3>Login</h3>
            </div>
            <div class="mt-3">
                <label for="username" class="form-label">Username</label><br>
                <input type="text" name="username" id="username" class="form-control">
                <div class="invalid-feedback">Enter Valid Username</div>
            </div>

            <div class="mt-3">
                <label for="password" class="form-label">password</label><br>
                <input type="password" name="password" id="password" class="form-control">
                <div class="invalid-feedback">Enter password</div>
            </div>

            <div class="mt-3">
                <button class="btn btn-primary w-100 fw-bold rounded-3 mb-3 create-post-btn submit-btn">Sign up</button>
            </div>
        </form>
    </div>
</div>
